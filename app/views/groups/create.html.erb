<h1>Listing groups</h1>

<%= form_tag(:controller=>'groups', :action=>'create') do %>
<%= text_field_tag :name %>
<%= submit_tag "グループ検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <% group.members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= group.name %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
